<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_view_holder"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contentDescription_movie_poster"
            android:scaleType="centerCrop"
            android:transitionName="@string/movie_poster_transition_name" />

        <RelativeLayout
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/movie_view_holder_title"
                android:layout_width="257dp"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/marke_movie_as_favorited" />

            <ImageButton
                android:id="@+id/marke_movie_as_favorited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_border_white_24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>